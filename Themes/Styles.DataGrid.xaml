<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
  <Style TargetType="DataGrid" BasedOn="{StaticResource MahApps.Styles.DataGrid}">
    <Setter Property="RowHeight" Value="30"/>
    <Setter Property="ColumnHeaderHeight" Value="34"/>
    <Setter Property="GridLinesVisibility" Value="None"/>
  </Style>

  <Style TargetType="DataGridRow" BasedOn="{StaticResource MahApps.Styles.DataGridRow}">
    <Setter Property="SnapsToDevicePixels" Value="True"/>
    <Setter Property="Padding" Value="2"/>
    <Style.Triggers>
      <Trigger Property="IsSelected" Value="True">
        <Setter Property="Background" Value="#1A6DA3FF"/>
        <Setter Property="BorderBrush" Value="#336DA3FF"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MahApps.Styles.DataGridColumnHeader}">
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Background" Value="#0FFFFFFF"/>
  </Style>
</ResourceDictionary>

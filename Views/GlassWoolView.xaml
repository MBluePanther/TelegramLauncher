<UserControl x:Class="TelegramLauncher.Views.GlassWoolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="🧱 Стекловата — помощник по Telegram.exe и tdata  by Бачок Максов"
                   FontSize="20" FontWeight="SemiBold" Foreground="White" />

        <!-- ВВЕРХУ: строка поиска -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель ввода пути + кнопки скана -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Папка с ТГ:" VerticalAlignment="Center" />
                <TextBox Grid.Column="2" x:Name="BaseFolderBox" MinWidth="420"
                         VerticalAlignment="Center" />
                <Button Grid.Column="4" x:Name="PickBaseFolderBtn"
                        Padding="10,6" Click="PickBaseFolder_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="FolderSearch" Width="18" Height="18"/>
                        <TextBlock Text="  Выбрать..." VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="6" x:Name="ScanExeBtn"
                        Padding="10,6" Click="ScanExe_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Magnify" Width="18" Height="18"/>
                        <TextBlock Text="  Сканировать Telegram.exe" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="8" x:Name="ScanTdataBtn"
                        Padding="10,6" Click="ScanTdata_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="FolderSearchOutline" Width="18" Height="18"/>
                        <TextBlock Text="  Сканировать tdata" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Список результатов -->
            <Border Grid.Row="2" CornerRadius="8" BorderBrush="#2D2D2D" BorderThickness="1">
                <ListView x:Name="ResultsList"
                          SelectionMode="Extended"
                          Background="#151515"
                          Foreground="White"
                          BorderThickness="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <ListView.Resources>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="#1F1F1F"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="36"
                                            Header="✓"
                                            DisplayMemberBinding="{Binding SelectionMark}"/>
                            <GridViewColumn Width="110" Header="Тип" DisplayMemberBinding="{Binding TypeText}"/>
                            <GridViewColumn Width="220" Header="Имя" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Width="600" Header="Путь">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FullPath}" ToolTip="{Binding FullPath}" TextWrapping="NoWrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>

        <!-- НИЖЕ: панель итогов и назначения -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Найдено:" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" x:Name="FoundCountText" FontWeight="Bold" VerticalAlignment="Center" />

            <TextBlock Grid.Column="3" Text="Папка назначения tdata:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="5" x:Name="DestFolderBox" MinWidth="380" VerticalAlignment="Center"/>
            <Button Grid.Column="7" Padding="10,6" Click="PickDestFolder_Click">
                <iconPacks:PackIconMaterial Kind="FolderOutline" Width="18" Height="18"/>
            </Button>

            <Button Grid.Column="9" Padding="10,6" Click="Rescan_Click">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="18" Height="18"/>
                    <TextBlock Text="  Обновить список" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- НИЗ: действия -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="RemoveExeBtn" Padding="12,8" Margin="0,0,10,0" Click="RemoveExe_Click"
                    Background="#FF761010" Foreground="White">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="DeleteSweepOutline" Width="18" Height="18"/>
                    <TextBlock Text="  Убрать Telegram.exe" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="MoveTdataBtn" Padding="12,8" Click="MoveSelectedTdata_Click"
                    Background="#FF116611" Foreground="White">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="FolderMove" Width="18" Height="18"/>
                    <TextBlock Text="  Перенести выбранные tdata" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>

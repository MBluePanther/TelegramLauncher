<Window x:Class="TelegramLauncher.Views.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ShowActivated="False"
        Topmost="True"
        SizeToContent="WidthAndHeight">
    <Border x:Name="Card"
            Background="#CC1E1E1E"
            CornerRadius="10"
            Padding="12"
            Margin="0"
            BorderThickness="1"
            BorderBrush="{DynamicResource AccentColorBrush}">
        <Border.RenderTransform>
            <!-- Трансформа делается на содержимом, а не на Window -->
            <TranslateTransform Y="20"/>
        </Border.RenderTransform>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Иконка -->
            <TextBlock Grid.Column="0"
                       FontFamily="Segoe MDL2 Assets"
                       Text="" Foreground="White"
                       Margin="0,0,10,0"/>

            <!-- Сообщение -->
            <TextBlock Grid.Column="1"
                       x:Name="MsgBlock"
                       TextWrapping="Wrap"
                       MaxWidth="380"
                       Text="{Binding Message, RelativeSource={RelativeSource AncestorType=Window}}" Background="Transparent" Foreground="White" />
        </Grid>
    </Border>
</Window>
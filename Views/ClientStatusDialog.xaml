
<mah:MetroWindow x:Class="TelegramLauncher.Views.ClientStatusDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:models="clr-namespace:TelegramLauncher.Models"
                 Title="Статус клиента"
                 WindowStartupLocation="CenterOwner"
                 ShowMaxRestoreButton="False"
                 ShowMinButton="False"
                 ResizeMode="NoResize"
                 SizeToContent="WidthAndHeight">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Статус клиента" FontSize="18" FontWeight="SemiBold"/>
            <TextBlock x:Name="Subtitle" Margin="0,4,0,0" Opacity="0.8"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,12,0,12">
            <TextBlock Text="Выберите статус телеги:" Margin="0,0,0,6"/>
            <ComboBox x:Name="StatusBox" Width="220" SelectedIndex="0">
                <ComboBoxItem Content="Актив" Tag="{x:Static models:ClientStatus.Active}"/>
                <ComboBoxItem Content="Спам"  Tag="{x:Static models:ClientStatus.Crash}"/>
                <ComboBoxItem Content="Фриз"  Tag="{x:Static models:ClientStatus.Frozen}"/>
            </ComboBox>
            <TextBlock Grid.Row="2" Text="Комментарий:" Margin="0,0,0,4"/>
            
            <TextBox   Grid.Row="2" x:Name="CommentBox"
           Height="80" AcceptsReturn="True" TextWrapping="Wrap"
           VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
        

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="121" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click">OK</Button>
            <Button Width="90" IsCancel="True">Отмена</Button>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
